{
    "name": "ci4_spa/backend",
    "type": "project",
    "description": "CodeIgniter4 with Shield for SPA Admin Panel",
    "require": {
        "php": "^8.0",
        "codeigniter4/framework": "^4.4",
        "codeigniter4/shield": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable"
}